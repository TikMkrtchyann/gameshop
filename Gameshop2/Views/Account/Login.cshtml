@model Gameshop2.ViewModels.LoginModel

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="@Model.Email">Your Email</label>
            <input type="text" asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Your Password</label>
            <input asp-for="@Model.Password" />
            <span asp-validation-for="@Model.Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>